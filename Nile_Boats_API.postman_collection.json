{
  "info": {
    "name": "Nile Boats API",
    "description": "تطبيق إدارة حجوزات المراكب النيلية - API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"مستخدم جديد\",\n  \"email\": \"user2@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"phone\": \"01012345678\"\n}"
            },
            "url": "{{base_url}}/auth/register"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["var jsonData = pm.response.json();", "if (jsonData.token) { pm.collectionVariables.set('token', jsonData.token); }"],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@nileboats.com\",\n  \"password\": \"password\"\n}"
            },
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{base_url}}/auth/logout"
          }
        },
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/user"
          }
        }
      ]
    },
    {
      "name": "Trips",
      "item": [
        {
          "name": "Get All Trips",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/trips"
          }
        },
        {
          "name": "Get Trip by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/trips/1"
          }
        },
        {
          "name": "Get Trips by Date",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/trips?date=2026-02-15",
              "host": ["{{base_url}}"],
              "path": ["trips"],
              "query": [{"key": "date", "value": "2026-02-15"}]
            }
          }
        }
      ]
    },
    {
      "name": "Locations",
      "item": [
        {
          "name": "Get All Locations",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/locations"
          }
        },
        {
          "name": "Get Location by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/locations/1"
          }
        },
        {
          "name": "Admin - Get Locations",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/admin/locations"
          }
        },
        {
          "name": "Admin - Create Location",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Location\",\n  \"name_ar\": \"موقع جديد\",\n  \"description\": \"Description\",\n  \"address\": \"Cairo\",\n  \"is_active\": true\n}"
            },
            "url": "{{base_url}}/admin/locations"
          }
        }
      ]
    },
    {
      "name": "Vessel Types",
      "item": [
        {
          "name": "Get Vessel Types",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/vessel-types"
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Get My Bookings",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/bookings"
          }
        },
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"trip_id\": 1,\n  \"passengers_count\": 2,\n  \"payment_method\": \"online\"\n}"
            },
            "url": "{{base_url}}/bookings"
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"تغيير في الخطط\"\n}"
            },
            "url": "{{base_url}}/bookings/1/cancel"
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/notifications"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/admin/dashboard"
          }
        },
        {
          "name": "Admin - Get All Trips",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/admin/trips"
          }
        },
        {
          "name": "Admin - Get Bookings",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/admin/bookings"
          }
        },
        {
          "name": "Admin - Get Payments",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/admin/payments"
          }
        }
      ]
    }
  ]
}
